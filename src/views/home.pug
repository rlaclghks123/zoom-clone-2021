doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        <link rel="stylesheet" href="https://unpkg.com/mvp.css">
        title Choom
    body
        header 
            a(href="/") Choom
        main
            div#welcome
                div#nickname
                   form
                        input(type="text", required, placeholder="Write Your Nickname")
                        button Save 
                div#createRoom
                    form
                        input(type="text", required, placeholder="Room Name")
                        button Enter

            div#call
                h3
                div#myStream
                    video#myFace(autoplay, playinline, width="400", height="400")
                    button#mute Mute 
                    button#camera Turn Camera Off
                    select#cameras
                    video#peerFace(autoplay, playinline, width="400", height="400")
                div#chatroom
                    ul 
                    form
                        input(type="text", placeholder="Write Your Message")
                        button Send    
        script(src="/socket.io/socket.io.js")    
        script(src="/public/js/app.js")    